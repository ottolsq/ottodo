/* pages/diary/diary.wxss */
#container {
  width: 100vw;
  height: 100vh;

  background-color: #FFBE00;
}

#line {
  
  width: 25vw;
  height: 90vh;
  /* border-right: 2px solid grey; */
  /* background-color: orange; */


}

scroll-view {
  margin-left: 3vw;
  /* padding-top: 1.5vh; */
  /* margin-top: 2vh; */
  width: 94vw;
  height: 98vh;
  /* background-color: yellowgreen; */
}

.diary {
  width: 94vw;
  height: auto;
  
  display: flex;
  flex-direction: row;
  background-color: #F1F1F1;
}  

.date {
  width: 20vw;
  text-align: center;
  /* font-size: larger; */
  font-weight: bolder;
  border-right: 2px solid black;
  background-color: #F1F1F1;
}

.date :last-child {
  font-size: large;
  color: #F76260;
}

.infoItem {
  display: flex;
  flex-direction: row;
  background-color: #F1F1F1;
}

.point {
  /* font-size: 20px; */
  /* color: aliceblue; */
  border: 1px solid black;
  border-radius: 50%;

  margin-top: 0.5vh;
  width: 3vw;
  height: 3vw;
  margin-left: -2.1vw;

  background-color: #F1F1F1;
  /* z-index: 25; */
}

.info {
  width: 69.75vw;
  margin-left: 2vw;
  margin-top: 0vh;

  background-color: #F1F1F1;
}

.title {
  font-size: larger;
  font-weight: bolder;

}

.time {
  font-size: small;
  color: #4D4D4D;
  /* background-color: peru; */
}

.text {
  width: 67.75vw;
  margin-bottom: 2vh;
  margin-right: 2vw;
  border-radius: 1vw;
  
  white-space: pre-wrap;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 6;
  overflow: hidden;
  /* text-overflow: ellipsis; */
  font-size: large;
  font-weight: bolder;
  color: #fff;
  background-color: #4D4D4D;
}

#plus {
  width: 15vw;
  height: 15vw;

  position: fixed;
  right: 0%;
  bottom: 5%;
  transform: translate(-50%, -50%);
  

  font-size: 10vw;
  /* line-height: 15vw; */
  text-align: center;
  color: #F1F1F1;
  background-color: #2BA245;
  border-radius: 50%;
  border: 1px solid grey;
}

