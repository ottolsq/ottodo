<!--pages/schedule/schedule.wxml-->
<!-- <text>pages/schedule/schedule.wxml</text> -->
<view id="container">

  <view id="header">
    <view id="date_month" bind:tap="changeMonth">{{year}}/{{month+1}}</view>
    <view id="color_list">
      <view id="color_0" class="color_son"></view>
      <view id="color_1" class="color_son"></view>
      <view id="color_2" class="color_son"></view>
      <view id="color_3" class="color_son"></view>
    </view>
  </view>

  <view class="shadowBox" wx:if="{{isChangeMonth}}">
    <view id="changeMonth">
      <view class="close" bind:tap="changeMonth">x</view>
      <picker-view indicator-style="height: 50px;" style="width: 100%; height: 300px;" value="{{value}}" bindchange="bindChange">
        <picker-view-column>
          <view wx:for="{{years}}" wx:key="year" style="line-height: 50px; text-align: center;">{{item}}年</view>
        </picker-view-column>
        <picker-view-column>
          <view wx:for="{{months}}" wx:key="month" style="line-height: 50px; text-align: center;">{{item}}月</view>
        </picker-view-column>
      </picker-view>
    </view>
  </view>
  

  <view id="body">
    <view id="week">
      <view class="week_son">日</view>
      <view class="week_son">一</view>
      <view class="week_son">二</view>
      <view class="week_son">三</view>
      <view class="week_son">四</view>
      <view class="week_son">五</view>
      <view class="week_son">六</view>
    </view>
    <view id="month_date">
      <!-- 日期 -->
      <view wx:if="{{empty_list_0.length != 0}}" wx:for="{{empty_list_0}}" wx:key="index">
        <view class="date_son date_son_bk"></view>
      </view>

      <view wx:for="{{month_tips}}" wx:for-item="item" wx:key="index">
        <view wx:if="{{month_tips[index]==0}}" data-id="{{index}}" class="date_son tipStatus_0"  bind:tap="chooseDay">{{index + 1}}</view>
        <view wx:elif="{{month_tips[index]<=3}}" data-id="{{index}}" class="date_son tipStatus_1"  bind:tap="chooseDay">{{index + 1}}</view>
        <view wx:elif="{{month_tips[index]<=6}}" data-id="{{index}}" class="date_son tipStatus_2"  bind:tap="chooseDay">{{index + 1}}</view>
        <view wx:else="{{month_tips[index]>6}}" data-id="{{index}}" class="date_son tipStatus_3"  bind:tap="chooseDay">{{index + 1}}</view>
      </view>
      
      <view wx:if="{{empty_list_1.length != 0}}" wx:for="{{empty_list_1}}" wx:key="index">
        <view class="date_son date_son_bk"></view>
      </view>
    </view>
  </view>
  
  <view id="footer">
    <view id="footer_text">{{date_ed + 1}}日代办：</view>
    <scroll-view scroll-y="true">
      <view wx:if="{{tipList_new.length == 0}}">当日代办为空哦</view>

      <view wx:for="{{tipList_new}}" wx:for-item="item" wx:key="id">
      <view data-id="{{item.id}}" class="tips">
        <view>
          <text class="info">{{item.type}}.{{item.id}}:{{item.data}}</text>
        </view>
        <view class="done">
          <view class="box">
            <checkbox data-id="{{item.id}}" bind:tap="finished"></checkbox>
          </view>
        </view>
      </view>
    </view>
    
    </scroll-view>
  </view>
</view>



