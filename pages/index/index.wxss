/* pages/index/index.wxss */
#container {
  width: 100vw;
  height: 100vh;
  background-color: aqua;
}

#header {
  width: 100vw;
  height: 8vh;
  background-color: yellowgreen;

  display: flex;
  flex-direction: row;
  align-items: center;
  /* justify-content: center; */
}

.header_son {
  margin: auto;
}

#login {
  width: 60px;
  height: 40px;
  margin-left: 10px;
  background-color: rosybrown;
}

#date {
  width: 60px;
  height: 40px;
  background-color: skyblue;
}

#others {
  width: 60px;
  height: 40px;
  margin-right: 10px;
  background-color: salmon;
}

.shadowBox {
  position: fixed;
  background-color: rgb(212, 242, 231, 60%);
  width: 100vw;
  height: 100vh;
  transform: translate(0 , -8%);
  z-index: 50;
}

#othersView {
  position: fixed;
  left: 77%;
  top: 14%;
  transform: translate(-50%, -50%);

  width: 27vw;
  height: 21vh;

  background-color: #9899ee;
  border-radius: 3vw;
}

.othView_son {
  line-height: 7vh;
  text-align: center;
  width: 27vw;
  height: 7vh;

  font-size: 3vh;
  font-weight: bolder;
}

.Separator {
  height: 1px;
  line-height: 1px;
  font-size: 3vh;
  letter-spacing: 2px;
  text-align: center;
  /* background-color: red; */
}

.TipView{
  position: fixed;
  left: 50%;
  top: 30%;
  transform: translate(-50%, -50%);

  width: 80vw;
  height: 40vh;
  border-radius: 3vw;
  background-color: #9899ee;
  z-index: 99;
}

.title {
  width: 80vw;
  height: 6vh;

  line-height: 6vh;
  text-align: center;
  font-size: 25px;

  /* background-color: skyblue; */
}

.close {
  /* background-color: red; */
